<h1> Make a new Employee </h1>

<% if flash[:errors] %>
<% flash[:errors].each do | error |%>
<li style="color:red"><%= error %> </li> 
</br>
<% end %>
<% end %>

<%= form_with model: @employee do | f | %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    </br>
    </br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    </br>
    </br>
    <%= f.label :alias %>
    <%= f.text_field :alias %>
    </br>
    </br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </br>
    </br>
    <%= f.label :office %>
    <%= f.text_field :office %>
    </br>
    </br>
    <%= f.label :dog_id %>
    <%= f.collection_select :dog_id, @dogs, :id, :name%>
    </br>
    </br>
    <%= f.submit %>
    <%end%>
